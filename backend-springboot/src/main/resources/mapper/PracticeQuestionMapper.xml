<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="it.mapper.PracticeQuestionMapper">

    <!-- 插入练习题 -->
    <insert id="insert" parameterType="it.pojo.PracticeQuestion">
        INSERT INTO practice_question (
            video_id, summary_id, question, option_a, option_b, option_c,
            correct_answer, explanation, created_at
        ) VALUES (
                     #{videoId}, #{summaryId}, #{question}, #{optionA}, #{optionB}, #{optionC},
                     #{correctAnswer}, #{explanation}, NOW()
                 )
    </insert>

    <!-- 根据ID查询练习题 -->
    <select id="selectById" resultType="it.pojo.PracticeQuestion">
        SELECT * FROM practice_question WHERE id = #{id}
    </select>

    <!-- 根据videoId查询所有题目 -->
    <select id="selectByVideoId" resultType="it.pojo.PracticeQuestion">
        SELECT * FROM practice_question WHERE video_id = #{videoId}
    </select>

</mapper>
